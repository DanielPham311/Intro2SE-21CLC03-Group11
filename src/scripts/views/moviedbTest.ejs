              <p> Release date: {{ film["release_date"]}} </p>
              <p> Overview: {{ film["overview"] }} </p> 
              <form action="/watchSeries" method="POST"> 
                  <input type="hidden" name="I clicked it" value={{film["id"]}}> <!-- Send a static data to the server-->
                  <button type="submit">Click để xem phim :3</button>
              </form>
              <!-- <p> {{ film }}</p> -->
            {% endfor %}
          </ul>
          {% else %}
              <h1>{{series_data['title']}}</h1>
              <img src="https://image.tmdb.org/t/p/w500/{{ series_data["poster_path"] }}" alt="{{ series_data["title"] }} 
                  width="500" height="400">
