        {% if movie_data['results'] %}
        <h2>Kết quả tìm kiếm được:</h2>
        <ul>
          {% for film in movie_data['results'] %}
            <h4>Name: {{ film["title"] }} - ID: {{ film['id' ]}}</h4>
            <img src="https://image.tmdb.org/t/p/w500/{{ film["poster_path"] }}" alt="{{ film["title"] }} 
            width="200" height="200">
            <p> Release date: {{ film["release_date"]}} </p>
            <p> Overview: {{ film["overview"] }} </p> 
            <form action="/watchMovie" method="POST"> 
                <input type="hidden" name="I clicked it" value={{film["id"]}}> <!-- Send a static data to the server-->
                <button type="submit">Click để xem phim :3</button>
            </form>
            <!-- <p> {{ film }}</p> -->
          {% endfor %}
        </ul>
        {% else %}
            <h1>Search phim ở dưới còn đây là quảng cáo</h1>
            <h1>{{movie_data['title']}}</h1>
            <img src="https://image.tmdb.org/t/p/w500/{{ movie_data["poster_path"] }}" alt="{{ movie_data["title"] }} 
                width="500" height="400">
            <h3>MOVIE OVERVIEW:</h3>
