<div class="container">
  <header class="header">
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg">
      <div class="container-fluid">
        <a class="navbar-brand mx-auto" href="/">
          <img src="./resources/logo2.png" alt="logo" width="200" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#"></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="registerBlock bg-white">
    <div class="paddingBlock">
      <div class="title">
        <h1 class="text-dark my-2">Forgot Password</h1>
      </div>
      <p class="text-dark">How would you like to reset your password?</p>
      <form action="" method="get" id="forgotPassword">
        <div class="radioContainer d-flex flex-column">
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="method"
              id="email"
              value="email"
              checked
            />
            <label class="form-check-label text-dark" for="">Email</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="method"
              id="phone"
              value="phone"
            />
            <label class="form-check-label text-dark" for="">Text Message (SMS)</label>
          </div>
        </div>
        <p class="text-dark my-3">
          A link will be sent to you via the entered credentials to reset your
          password
        </p>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="credentials"
            id="emailInput"
            placeholder="abc@gmail.com / +84123456789"
            required
          />
        </div>
      </form>
      <button
        type="submit"
        class="btn btn-danger mt-3"
        form="forgotPassword"
        onclick="resetPassword()"
      >
        Reset Password
      </button>
    </div>
  </div>
</div>