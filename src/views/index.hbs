<main>
  <div id="recommended" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner" role="listbox">
      {{#each recommendedMovie}}
        <div class="carousel-item {{#if @first && isFirstItemActive}}active{{/if}}" id="{{movie_Id}}">
          <div class="overlay"></div>
          <img
            src="{{backdrop_path}}"
            class="w-100 d-block bg-img"
            alt="First movie"
          />
          <div class="carousel-caption d-block">
            <h1 class="display-4 fw-bold">{{title}}</h1>
            <p class="fst-italic">
              {{overview}}
            </p>
            <p class="fw-semibold">
              {{release_date}}
              |
              <span class="highlight">{{ageRestrictions}}</span>
              | Cinematic Movie
            </p>
            <p class="fw-semibold fs-3">
              <i class="bi bi-star-fill"></i>
              IMDb Rating:
              {{rating}}/10
              Genre:
              <span class="highlight fs-4 fst-italic">{{#each movie.genres}}
                  {{this}}{{#unless @last}}, {{/unless}}
                {{/each}}</span>
            </p>
            <a
              name="playMovie"
              id=""
              class="btn p-3 mx-3 fw-bold play-btn text-white"
              href="#"
              role="button"
            ><i class="bi bi-play-fill"></i> Watch</a>
          </div>
        </div>
      {{/each}}
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#recommended"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#recommended"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

