<div class="container">
  <header class="header">
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg">
      <div class="container-fluid">
        <a class="navbar-brand mx-auto" href="#">
          <img src="/resources/logo2.png" alt="logo" width="200" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#"></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="registerBlock2">
    <div class="paddingBlock">
      <div class="title">
        <h1>Register</h1>
      </div>

      <div class="inputs">
        <!-- Bootstrap Form -->
        <form action="/register" id="formSubmit" method="POST">
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="username"
              required
              placeholder="Email or phone number"
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              class="form-control"
              name="password"
              required
              placeholder="Password"
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              class="form-control"
              name="confirmPassword"
              required
              placeholder="Confirm Password"
            />
          </div>
          <div class="button text-center">
            <button type="submit" class="btn btn-danger" form="formSubmit">
              Sign Up
            </button>
          </div>
        </form>
      </div>

      <div class="moreInfo">
        <div>
          <span class="isNew text-white">Already have an account?</span>
          <a
            href="#"
            class="btn btn-link text-white text-decoration-none"
          >Sign in now.</a>
        </div>
      </div>
    </div>
  </div>
  <footer class="footer">
    <!-- Bootstrap Footer -->
    <div class="block1">
      <span>Questions?</span>
      <span>Contact us.</span>
    </div>

    <div class="block2">
      <a href="#">FAQ</a>
